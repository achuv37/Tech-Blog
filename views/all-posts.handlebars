<article class ="posts">
  {{#each posts}}
  <div class ="card">
    <div class ="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
      </h2>
      <div>
        <p>Posted by: {{User.username}} on {{format-date createdAt }} </p>
      </div>
    </div>
    <div class ="card-body">
      {{content}}
    </div>
  </div>
  {{/each}}
</article>