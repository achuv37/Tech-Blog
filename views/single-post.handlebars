<article class ="post">
  <div class ="card">
    <div class ="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        <p>Posted by: {{post.User.username}} on {{format-date post.createdAt }}</p>
      </div>
    </div>
    <div class ="card-body">
      {{post.content}}
    </div>
  </div>
</article>

<div class="card">
  <div class="card-header">
    <h3>Comments</h3>
  </div>
  <section class="card-body">
    <div class="comments">
      {{#each post.comments}}
      <section class="comment">
        <div class="meta">
          {{user.username}} on {{format-date post.createdAt}}
        </div>
        <div class="text">
          {{comment_text}}
        </div>
      </section>
      {{/each}}
    </div>
  </section>
</div>

<!--Add new comment -->
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<script src="./js/comment.js"></script> 